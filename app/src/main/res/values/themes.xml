<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMSReceiver" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">#737373</item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
<!--        <item name="colorOnSecondary">?android:attr/textColorSecondary</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@null</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorOnPrimarySurface">@color/card_color</item>


        <item name="customColorValue">@color/edit_text_color</item>

<!--        <item name="colorControlNormal">@color/material_on_surface_stroke</item>-->
<!--        <item name="colorControlHighlight">@color/design_default_color_primary</item>-->
<!--        <item name="colorControlActivated">@color/design_default_color_primary</item>-->



        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
<!--        <item name="colorPrimary">@android:color/transparent</item>-->



        <item name="circularProgressIndicatorStyle">@style/Widget.App.LinearProgressIndicator</item>


        <item name="colorControlHighlight">@color/shimmer_color</item>

        <item name="itemRippleColor">@color/ripple_material_light</item>

        <item name="android:windowBackground">@color/white</item>


    </style>

    <style name="Theme.MyThemeOverlay_Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/transparent</item>
        <item name="colorControlHighlight">@color/shimmer_color</item>
        <item name="customColorValue">@color/edit_text_color</item>w
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorControlNormal">#737373</item>
    </style>



    <style name="Widget.App.LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.LinearProgressIndicator</item>
        <item name="trackThickness">5dp</item>
    </style>

    <style name="ThemeOverlay.App.LinearProgressIndicator" parent="">
        <item name="colorPrimary">@color/green</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorPrimary">@color/control_color</item>
        <item name="colorOnSurface">@color/colorSurface</item>
    </style>

    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorOnSurface">@color/control_color</item>
        <item name="colorSecondary">@color/secondaryColor</item>
    </style>

