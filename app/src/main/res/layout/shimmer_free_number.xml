<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/free_number_layout_shimmer"
    android:layout_width="match_parent"
    android:layout_height="90dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/free_call_number_shimmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="25dp"
            android:background="#dddddd"
            android:textColor="#dddddd"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/free_region_icon_shimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/free_prefix_shimmer"
            app:layout_constraintTop_toTopOf="@+id/free_region_icon_shimmer" />

        <ImageView
            android:id="@+id/free_region_icon_shimmer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/shimmer_circle_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/free_prefix_shimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="RU +7"
            android:background="#dddddd"
            android:textColor="#dddddd"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/free_region_icon_shimmer"
            app:layout_constraintStart_toEndOf="@+id/free_region_icon_shimmer"
            app:layout_constraintTop_toTopOf="@+id/free_region_icon_shimmer" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>