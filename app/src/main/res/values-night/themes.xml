<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMSReceiver" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryLightColor</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
<!--        <item name="colorOnSecondary">?android:attr/textColorSecondary</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@null</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>

        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/windowBackground</item>

        <item name="customColorValue">@color/colorSurface</item>



        <!--        <item name="colorControlNormal">@color/material_on_surface_stroke</item>-->
<!--        <item name="colorControlHighlight">@color/design_default_color_primary</item>-->
<!--        <item name="colorControlActivated">@color/design_default_color_primary</item>-->



        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
<!--        <item name="colorPrimary">@android:color/transparent</item>-->

        <item name="android:windowBackground">@color/windowBackground</item>



    </style>

    <style name="Theme.MyThemeOverlay_Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:textColorPrimary">@android:color/transparent</item>
        <item name="colorOnPrimary">@android:color/transparent</item>
        <item name="contentScrim">@android:color/transparent</item>

    </style>

    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="colorPrimary">#d0d0d0</item>
        <item name="colorOnPrimary">@color/colorSurface</item>
        <item name="colorOnSurface">?attr/colorControlNormal</item>

    </style>

    <style name="SwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorOnSurface">@color/control_color</item>
        <item name="colorSecondary">@color/secondaryLightColor</item>
    </style>


</resources>